<li>
  <article class="snippet">
    <h3 class="snippet__title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <p class="snippet__meta"><span>{{ post.date | postDate }}</span></p>
    <p class="snippet__body">{{ post.data.description }}</p>
    <div class="text-center">
      <a href="{{ post.url }}" class="btn btn--primary">Detail</a>
    </div>
  </article>
</li>